<div class="row">
  
  <div>

    <div class="brand-header">
      <h2><strong>Work<i class="fa fa-diamond" aria-hidden:"true"></i>Gems</strong></h2>
      <h2>Showcase</h2>      
    </div>


    <div class="brand-body"> 

      <table>
        <thead>
          <tr>
            <th>Category</th>
            <th>Title</th>
            <th>Description</th>
            <th>Marquee</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @samples.each do |sample| %>
            <tr>
              <td><%= sample.category %></td>
              <td><%= sample.title %></td>
              <td><%= sample.description %></td>
              <td><%= sample.marquee %></td>
              <td><%= link_to 'Show', sample %></td>
              <td><%= link_to 'Edit', edit_sample_path(sample) %></td>
              <td><%= link_to 'Destroy', sample, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= link_to 'New Gem', new_sample_path %>

    </div>
  </div>
</div>

