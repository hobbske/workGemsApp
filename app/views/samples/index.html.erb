<div class="row">
  
  <div>

    <div class="brand-header">
      <h2><strong>Work<i class="fa fa-diamond" aria-hidden:"true"></i>Gems</strong></h2>
      <h2>Showcase</h2>      
    </div>

    <div class="container-fluid">
      <div class="col-sm-12">
        <div class="row">
          <div id="carousel-showcase-index" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
              <li data-target=""carousel-showcase-index" data-slide-to="0" class="active"></li>
              <li data-target=""carousel-showcase-index" data-slide-to="1"></li>
              <li data-target=""carousel-showcase-index" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
              <div class="item active">
                <%= image_tag "Elliot_stairway_before.png" %>
                <div class="carousel-caption">
                  Before
                </div>
              </div>
              <div class="item">
                <%= image_tag "Elliot_stairway_after.png" %>
                <div class="carousel-caption">
                  Before
                </div>
              </div>
              <div class="item">
                <%= image_tag "external_home_before.jpg" %>
                <div class="carousel-caption">
                  Before
                </div>
              </div>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href=""carousel-showcase-index" role="button" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href=""carousel-showcase-index" role="button" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
      </div> 
    </div>


    <div class="brand-body"> 

      <table class="container table-lined table-hover">
        <thead>
          <tr>
            <th><h4><strong>Category</strong></h4></th>
            <th><h4><strong>Title</strong></h4></th>
            <th><h4><strong>Description</strong></h4></th>
            <th><h4><strong>Marquee</strong></h4></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @samples.each do |sample| %>
            <tr>
              <td class="text-center"><%= sample.category %></td>
              <td><%= sample.title %></td>
              <td><%= sample.description %></td>
              <td class="text-center"><%= sample.marquee %></td>
              <td>         
                <%= link_to sample do %>
                  <i class="fa fa-diamond">
                <% end %>
              </td>
              <td>
                <%= link_to edit_sample_path(sample) do %>
                 <i class="fa fa-pencil">
                <% end %>
              </td>
              <td>
                <%= link_to sample, method: :delete, data: { confirm: 'Are you sure you want to delete?' }  do %>
                  <i class="fa fa-trash-o">  
                <% end %>  
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <div class="text-center">
        <%= link_to 'New Gem', new_sample_path, class: 'btn btn-brand' %>
      </div>
      <br>
    </div>
  </div>
</div>

